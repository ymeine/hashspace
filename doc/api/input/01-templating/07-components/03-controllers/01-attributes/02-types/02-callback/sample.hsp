var klass = require("hsp/klass");

var Controller = klass({
	attributes: {
		onupdate: {type: "callback"}
	},

	update: function() {
		this.onupdate({msg: "updated!"});
	}
});

# template component using controller:Controller
	<button onclick="{controller.update()}">Update</button>
# /template

function handler(event) {
	console.log(event);
}

# template example()
