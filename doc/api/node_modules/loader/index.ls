require! {
	node-path: path
}



export class Loader
	(@module) ~>

	resolve: (path) ->
		@module.require.resolve path

	reload: (input) ->
		switch typeof! input
		| 'String'
			resolved = @resolve input
			delete @module.require.cache[resolved]
			@module.require resolved
		| 'Array' => [@reload path for path in input]
		| 'Object'=> {[key, @reload path] for key, path of input}
