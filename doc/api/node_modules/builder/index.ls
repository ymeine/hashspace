require! {
	'entry'
}

{Entry} = entry





export apiToHTML = (api, stylesheet) ->
	entries = [new Entry input for input in api.entries]

	parts = for entry in entries
		entry.serialize 'html'
	body = parts.join '\n'

	"""
		<!DOCTYPE html>
		<html>
		<head>
			<meta charset="utf-8">
			<title>Hashspace â€” API Doc </title>
			<style>
		#stylesheet
			</style>
		</head>
		<body>
			#body
		</body>
		</html>
	"""

export apiToMarkdown= (api) ->
	entries = [new Entry input for input in api.entries]

	parts = for entry in entries
		entry.serialize 'markdown'
	body = parts.join '\n\n'

	body
