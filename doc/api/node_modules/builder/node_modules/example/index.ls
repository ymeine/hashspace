require! {
	'serializable'
}

{Serializable} = serializable





export class Example extends Serializable
	(input) ~>
		spec = switch typeof! input
		| 'String' => {code: input}
		| 'Object' => input
		| _ => {}

		# ---------------------------------------------------------------- title

		{title, name, header} = spec

		title ?= name
		title ?= header

		@ <<< {title}

		# ----------------------------------------------------------------- code

		{code, content} = spec

		code ?= content

		@ <<< {code}

